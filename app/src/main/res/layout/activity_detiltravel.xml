<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_detiltravel"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="sigit.jadwal.view.DetiltravelActivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbarDetiltravel"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:fitsSystemWindows="true"
        android:minHeight="?attr/actionBarSize"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:background="?attr/colorPrimary">
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:id="@+id/info"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbarDetiltravel"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            tools:ignore="RtlSymmetry">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:paddingLeft="0dp"
                android:paddingTop="10dp"
                android:gravity="center_vertical">
                <TextView
                    android:text="00:00"
                    android:id="@+id/Dtljamtrn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:textColor="@android:color/primary_text_light" />

                <TextView
                    android:id="@+id/Dtlnamatrn"
                    android:paddingLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="@android:color/primary_text_light" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingLeft="0dp"
                android:paddingTop="10dp"
                android:gravity="center_vertical">
                    <TextView
                        android:id="@+id/Dtlhargatrn"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        tools:text="0"
                        android:textColor="@android:color/primary_text_light" />
            </LinearLayout>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/colorAccent" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            tools:ignore="RtlSymmetry" >
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:paddingLeft="0dp"
                android:paddingTop="0dp"
                android:id="@+id/ln_jemput">
                <TextView
                    android:id="@+id/Dtlalamatjemput"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="@android:color/primary_text_light" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="0.3"
                android:paddingRight="0dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp">
                <Button android:id="@+id/btn_konf_asal"
                    android:layout_width="fill_parent"
                    android:text="Back Up"
                    android:background="@drawable/button_bg_rounded_corners"
                    android:layout_height="30dp"
                    android:textColor="@android:color/white"/>
            </LinearLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/colorAccent" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            tools:ignore="RtlSymmetry" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:paddingLeft="0dp"
                android:id="@+id/ln_tujuan">
            <TextView
                android:id="@+id/Dtlalamattujuan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="@android:color/primary_text_light" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:orientation="horizontal"
                android:paddingRight="0dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp">
                <Button android:id="@+id/btn_konf_tujuan"
                    android:layout_width="fill_parent"
                    android:text="Finish"
                    android:background="@drawable/button_bg_rounded_corners"
                    android:layout_height="30dp"
                    android:textColor="@android:color/white"/>
            </LinearLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/colorAccent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            tools:ignore="RtlSymmetry" >
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:paddingLeft="0dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingRight="10dp">
                <Button android:id="@+id/btn_telp"
                    android:layout_width="fill_parent"
                    android:text="Telp"
                    android:background="@drawable/button_bg_rounded_corners"
                    android:layout_height="40dp"
                    android:textColor="@android:color/white"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingRight="0dp">
                <Button android:id="@+id/btn_sms"
                    android:layout_width="fill_parent"
                    android:text="SMS"
                    android:background="@drawable/button_bg_rounded_corners"
                    android:layout_height="40dp"
                    android:textColor="@android:color/white"/>
            </LinearLayout>
        </LinearLayout>

        <fragment
            android:id="@+id/map_travel"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context="sigit.jadwal.DetiltravelActivity">
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|bottom"
                android:src="@drawable/ic_direction"
                android:background="@drawable/rounded_button"
                android:padding="10dp"
                android:layout_marginBottom="10dp"
                android:id="@+id/imgDirection" />
        </fragment>
    </LinearLayout>
</RelativeLayout>
